<h1>
  League Standings
</h1>

Current Week: <%= current_week %>

<table>
  <tr>
    <th></th>
    <th>Team 1</th>
    <th>Team 2</th>
    <th>Team 3</th>
    <th>Points</th>
    <th>Description</th>
  </tr>
<% @teams.each do |team| %>
    <% if team.teams_picked.size == 3 %>
      <tr>
      <td><%= link_to team.name, team %></td>
      <td> <%= image_for(team.teams_picked[0]) %>
      <td> <%= image_for(team.teams_picked[1]) %>
      <td> <%= image_for(team.teams_picked[2]) %>
      <td> <%= team.total_points %></td>
      <td> <%= simple_format(team.description) %></td>
      </tr>
    <% end %>
<% end %>
</table>

<div class="container">
<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, autofocus: true, size: 40, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, size: 40, class: 'form-control' %>
      </div>
    <p>
      <%= submit_tag 'Sign In', class: "btn btn-default" %>
    </p>
  </fieldset>
<% end %>
</div>
